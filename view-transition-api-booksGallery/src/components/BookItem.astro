---
interface Props {
  id: string;
  img: string;
}
const { img, id } = Astro.props;
---

<a
  href={`/${id}`}
  class="inline-block hover:scale-105 hover:contrast-125 hover:shadow-lg transition-all">
  <img
    class="aspect-[389/500] object-cover rounded w-full h-full"
    src={img}
    alt={`Portada del libro ${id}`}
    style={`view-transition-name:${id}`}
  />
</a>
